<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList include="a332-animations.xml">
	<name>A330-203</name>
	<path>a330-200-main.ac</path>

	<model>
		<name>General Electric Engines</name>
		<path>Aircraft/A330-200/Models/cf6-80e1.xml</path>
	</model>
	
	<!-- Separate Flightdeck to fit the modified nose -->
	<model>
		<name>Flightdeck</name>
		<path>Aircraft/A330-200/Models/FlightDeck/a332.flightdeck.xml</path>
		<offsets>
			<x-m>-20.3752</x-m>
			<z-m>1.0528</z-m>
		</offsets>
	</model>

<!-- LIVERY SELECT -->
	<!-- Animation -->
	<animation>
		<type>material</type>
		<!-- Fuselage -->
		<object-name>fuselage</object-name>
		<object-name>nosecone</object-name>
		<object-name>vstab</object-name>
		<object-name>rudder</object-name>
		<object-name>bellyfairing</object-name>
		<!-- Wings -->
		<object-name>winglet0</object-name>
		<object-name>winglet1</object-name>
		<!-- Engines -->
		<object-name>ge.nacelle0</object-name>
		<object-name>ge.reverser0</object-name>
		<object-name>ge.nacelle1</object-name>
		<object-name>ge.reverser1</object-name>
		<property-base>sim/model/livery</property-base>
		<texture-prop>texture</texture-prop>
	</animation>

	<!-- Nasal code -->
	<nasal>
		<load>
		 var livery_update = aircraft.livery_update.new("Aircraft/A330-200/Models/Liveries/" ~ getprop("sim/aero"));
		</load>
		<unload>
		 livery_update.stop();
		</unload>
	</nasal>
		
</PropertyList>
